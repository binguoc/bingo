<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>无标题文档</title>
<link href="../../css/style.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="../../js/jquery-1.8.3.min.js"></script>
<script type="text/javascript" src="../../js/purchase/brand.js"></script>
<script type="text/javascript">
function tipOpen(content,brId,ff) {
	$(".tipright p").text(content);
	$("#tip").fadeIn(200);
	var inputs="";
	if(ff==0){
		inputs+="<input name='' type='button'  class='sure' value='确定' onclick='cancelBrand("+brId+")' />";
		inputs+="&nbsp;";
		inputs+="<input name='' type='button'  class='cancel' value='取消' onclick='tipClose()' />";
	}else{
		inputs+="<input name='' type='button'  class='sure' value='确定' onclick='recoverBrand("+brId+")'/>";
		inputs+="&nbsp;";
		inputs+="<input name='' type='button'  class='cancel' value='取消' onclick='tipClose()' />";
	}
	$("div[class=tipbtn]").html(inputs);
}
function tipClose() {
	$("#tip").fadeOut(200);
}

</script>
<script type="text/javascript">
	$(function(){
		queryBrandByPage();
	});
</script>

</head>
<body>
<div class="place"> <span>位置：</span>
  <ul class="placeul">
    <li>采购管理</li>
    <li>品牌管理</li>
    <li>基本内容</li>
  </ul>
</div>
<div class="rightinfo">
  <form method="post" id="queryForm">
    <ul class="tools">
      <li> 品牌名称:
        <input type="text" name="brName"/>
      </li>
      <li> 状态：
        <select name="brStatus">
          <option value="-1">请选择</option>
          <option value="0">不可用</option>
          <option value="1">可用</option>
        </select>
      </li>
      <li class="subBut" onclick="query()"><img src="../../images/t06.png" />查询</li>
      <li class="subBut" onclick="window.location.href='brandAdd.html'"><img src="../../images/t01.png" />添加</li>
    </ul>
    <table class="tablelist">
      <thead>
        <tr>
          <th>序号</th>
          <th>品牌名称</th>
          <th>状态</th>
          <th>创建时间</th>
          <th>创建人</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        
      </tbody>
    </table>
    <div class="pagin">
    	<input type="hidden" name="pageNum"/>
      	<div class="message">共<i class="blue"></i>条记录，当前显示第&nbsp;<i class="blue">&nbsp;</i>页&nbsp;共<i class="blue">&nbsp;</i>页</div>
      	<ul class="paginList">
      	
      	</ul>
    </div>
  </form>
  <!-- 提示框 -->
  <div id="tip" class="tip">
    <div class="tiptop"><span>提示信息</span><a onclick="tipClose()"></a></div>
    <div class="tipinfo"> <span><img src="../../images/ticon.png" /></span>
      <div class="tipright">
        <p></p>
        <cite>如果是请点击确定按钮 ，否则请点取消。</cite> </div>
    </div>
    <div class="tipbtn">
      <input name="" type="button"  class="sure" value="确定" onclick="tipClose()" />
      &nbsp;
      <input name="" type="button"  class="cancel" value="取消" onclick="tipClose()" />
    </div>
  </div>
</div>
<script type="text/javascript">
	$('.tablelist tbody tr:odd').addClass('odd');
</script>
</body>
</html>
