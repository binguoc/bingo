//查询所有的仓库
function queryAllStorage(){
	$.ajax({
		url:"queryAllStorage.action",
		async:false,
		dataType:"json",
		type:"post",
		success:function(result){
			page=result;
			var options = "";
			$(result).each(function(){
				options += "<option value="+this.stId+">"+this.stName +"</option>";
			}); 
			$(".dfselect:last").html(options);
		}
	});
}

