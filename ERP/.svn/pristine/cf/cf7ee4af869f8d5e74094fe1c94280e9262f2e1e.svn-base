			$(".forminfo li:eq(9) cite").html(timeToDate(result[0].stoTime));
			$(".forminfo li:eq(10) cite").html(result[0].stoMan);
			$(".forminfo li:eq(11) cite").html((result[0].stoStatic==0?"未入库":"已入库"));
		}
	});
