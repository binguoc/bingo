// 计算一行金额
function outCountmouse(obj){
	var count=$(".deCount"+obj+"").val();
	var monovalent=$(".deMonovalent"+obj+"").val();
	if(count=="" || isNaN(count) || count<0){
		alert("请输入正确的数量");
		$(".deCount"+obj+"").val("");
		$(".deMonovalent"+obj+"").val("");
		return;
	}
	if(count!="" && monovalent!=""){
		var deMoney=count*monovalent;
		$(".totalMoney"+obj+"").val(deMoney);
		getTotalMoney(obj);
	}
}

